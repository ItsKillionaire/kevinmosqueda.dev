---
import { readFile } from 'node:fs/promises';

const immichIconContent = await readFile('./public/images/immich.svg', 'utf-8');

const services = [
  {
    name: 'Jellyfin',
    description: 'Peliculas y series',
    url: 'https://stream.kevinmosqueda.dev',
    icon: '/images/jellyfin.png',
  },
  {
    name: 'Jellyseerr',
    description: 'Pide las peliculas o series que quieras',
    url: 'https://pedidos.kevinmosqueda.dev',
    icon: '/images/jellyseerr.png',
  },
  {
    name: 'Nextcloud',
    description: 'Respalda cualquier tipo de archivo',
    url: 'https://cloud.kevinmosqueda.dev',
    icon: '/images/nextcloud.png',
  },
  {
    name: 'Immich',
    description: 'Respalda fotos y videos',
    url: 'https://fotos.kevinmosqueda.dev',
    icon: immichIconContent,
  },
];
---
<div class="services-container">
  <h2>Servicios :3</h2>
  <div class="services-grid">
    {services.map(service => (
      <a href={service.url} target="_blank" rel="noopener noreferrer" class="service-card">
        <div class="service-icon">
          {service.name === 'Immich' ? (
            <Fragment set:html={service.icon} />
          ) : (
            <img src={service.icon} alt={service.name} />
          )}
        </div>
        <div class="service-info">
          <h3>{service.name}</h3>
          <p>{service.description}</p>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .services-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h2 {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .service-card {
    background-color: var(--overlay-bg-color);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: var(--text-color);
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 1rem;
  }

  .service-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .service-icon svg {
    width: 100%;
    height: 100%;
  }

  .service-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .service-info p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
