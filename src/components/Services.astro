---
const services = [
  {
    name: 'Jellyfin',
    description: 'Peliculas y series',
    url: 'https://stream.kevinmosqueda.dev',
    icon: '/images/jellyfin.png',
    instructionImg: '/images/Jellyfin_instructions.png',
  },
  {
    name: 'Jellyseerr',
    description: 'Pide las peliculas o series que quieras',
    url: 'https://pedidos.kevinmosqueda.dev',
    icon: '/images/jellyseerr.png',
    instructionImg: '/images/Jellyseerr_instructions.jpg',
  },
  {
    name: 'Nextcloud',
    description: 'Respalda cualquier tipo de archivo',
    url: 'https://cloud.kevinmosqueda.dev',
    icon: '/images/nextcloud.png',
    instructionImg: '/images/Nextcloud_intructions.png',
  },
  {
    name: 'Immich',
    description: 'Respalda fotos y videos',
    url: 'https://fotos.kevinmosqueda.dev',
    icon: '/images/immich.svg', // Treated as regular image
    instructionImg: '/images/Immich_intructions.png',
  },
  {
    name: 'Admin panel',
    description: '',
    url: 'https://dashboard.kevinmosqueda.dev',
    icon: '/images/kirbysleeping.gif',
    instructionImg: '',
  },
];
---
<div class="services-container">
  <h2>Servicios :3</h2>
  <div class="services-grid">
    {services.map(service => (
      <div class="service-card">
        <a href={service.url} target="_blank" rel="noopener noreferrer" class="service-link">
          <div class="service-icon">
            {service.icon.endsWith('.gif') || service.icon.endsWith('.svg') ? (
              <img src={service.icon} alt={service.name} style="height: 100%; object-fit: contain;" />
            ) : (
              <img src={service.icon} alt={service.name} />
            )}
          </div>
          <div class="service-info">
            <h3>{service.name}</h3>
            {service.description && <p>{service.description}</p>}
          </div>
        </a>
        <div class="service-actions">
          {service.instructionImg && (
            <button class="setup-button" data-instruction-img={service.instructionImg}>
              ðŸ“± Configurar en Celular
            </button>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<div id="instructionModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <img id="modalImage" src="" alt="">
  </div>
</div>

<script>
  const modal = document.getElementById('instructionModal');
  const modalImage = document.getElementById('modalImage');
  const closeButton = document.querySelector('.close-button');
  const setupButtons = document.querySelectorAll('.setup-button');

  setupButtons.forEach(button => {
    button.addEventListener('click', (event) => {
      event.preventDefault();
      event.stopPropagation();
      const imageUrl = button.dataset.instructionImg;
      modalImage.src = imageUrl;
      modal.style.display = 'flex';
    });
  });

  closeButton.addEventListener('click', () => {
    modal.style.display = 'none';
  });

  window.addEventListener('click', (event) => {
    if (event.target === modal) {
      modal.style.display = 'none';
    }
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && modal.style.display === 'flex') {
      modal.style.display = 'none';
    }
  });
</script>

<style>
  .services-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h2 {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background-color: var(--overlay-bg-color);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: var(--text-color);
    transition: transform 0.3s ease;
    position: relative; /* Needed for z-index of button */
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: var(--text-color);
    width: 100%;
    padding-bottom: 0; /* No button, no extra space needed */
  }

  .service-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 1rem;
  }

  .service-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .service-icon svg {
    width: 100%;
    height: 100%;
  }

  .service-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .service-info p {
    margin: 0;
  }

  .service-actions {
    margin-top: 1rem;
    z-index: 10; /* Ensure button is clickable */
  }

  .setup-button {
    background-color: var(--accent-color);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background-color 0.3s ease;
  }

  .setup-button:hover {
    background-color: var(--accent-color);
    filter: brightness(0.9);
  }

  /* Modal Styles */
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1000; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0,0,0,0.8); /* Black w/ opacity */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem; /* Add padding to prevent content from touching edges */
  }

  .modal-content {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    position: relative;
    background-color: transparent; /* Make modal content background transparent */
    padding: 20px; /* Add some padding around the image */
    border-radius: 8px; /* Slightly rounded corners */
  }

  #modalImage {
    width: 100%;
    height: auto;
    display: block;
  }

  .close-button {
    position: absolute;
    top: -30px; /* Position above the image */
    right: 0;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
    cursor: pointer;
  }

  .close-button:hover,
  .close-button:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
  }

  @media (min-width: 769px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    /* Center the last item if it's the 5th one (odd number in 2-column layout) */
    .service-card:last-child:nth-child(odd) {
      grid-column: 1 / -1;
      justify-self: center;
      max-width: 500px; /* Optional: limit width of centered item */
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
    .modal-content {
      width: 95%;
    }
  }
</style>

