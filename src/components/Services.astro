    description: '', // No description
    url: 'https://dashboard.kevinmosqueda.dev',
    icon: '/images/kirbystandby.gif', // Use kirbystandby.gif
    instructionImg: '', // Admin panel might not need a mobile setup guide
    badgeUrl: 'https://status.kevinmosqueda.dev/api/badge/5/status?style=flat-square&color=00C853&upLabel=En%20l%C3%ADnea&downLabel=Fuera%20de%20l%C3%ADnea',
  },
