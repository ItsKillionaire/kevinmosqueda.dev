<div class="about-visual">
  <div class="server-rack">
    <div class="server"></div>
    <div class="server"></div>
    <div class="server"></div>
    <div class="server"></div>
  </div>
</div>

<style>
  .about-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .server-rack {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .server {
    width: 150px;
    height: 20px;
    background-color: #E0D8D0;
    border-radius: 4px;
    position: relative;
    animation: pulse 2s infinite ease-in-out;
  }

  .server:nth-child(2) {
    animation-delay: 0.5s;
  }

  .server:nth-child(3) {
    animation-delay: 1s;
  }

  .server:nth-child(4) {
    animation-delay: 1.5s;
  }

  @keyframes pulse {
    0% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0.5;
    }
  }
</style>
