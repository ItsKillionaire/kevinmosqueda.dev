---
import ProjectsButton from './ProjectsButton.astro';
---
<section class="skills">
  <div class="skills-content">
    <div class="skills-header">
      <p class="skills-label">[ skills ]</p>
      <ProjectsButton />
    </div>
    <div class="skills-grid">
      <div class="skill-category">
        <h3>Frontend</h3>
        <div class="skills-list">
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg" alt="HTML logo" /><span>HTML</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-original.svg" alt="CSS logo" /><span>CSS</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg" alt="JavaScript logo" /><span>JavaScript</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/astro/astro-original.svg" alt="Astro logo" /><span>Astro</span></div>
        </div>
      </div>
      <div class="skill-category">
        <h3>Backend & Cross-Platform</h3>
        <div class="skills-list">
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg" alt="Node.js logo" /><span>Node.js</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/dart/dart-original.svg" alt="Dart logo" /><span>Dart</span></div>
        </div>
      </div>
      <div class="skill-category">
        <h3>Systems & Scripting</h3>
        <div class="skills-list">
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linux/linux-original.svg" alt="Linux logo" /><span>Linux</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/windows8/windows8-original.svg" alt="Windows logo" /><span>Windows</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/bash/bash-original.svg" alt="Bash logo" /><span>Bash</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/powershell/powershell-original.svg" alt="PowerShell logo" /><span>PowerShell</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/lua/lua-original.svg" alt="Lua logo" /><span>Lua</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/git/git-original.svg" alt="Git logo" /><span>Git</span></div>
        </div>
      </div>
      <div class="skill-category">
        <h3>Tools I Love</h3>
        <div class="skills-list">
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/neovim/neovim-original.svg" alt="Neovim logo" /><span>Neovim</span></div>
          <div class="skill-item"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tmux/tmux-original.svg" alt="Tmux logo" /><span>Tmux</span></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    padding: 0.5rem 2rem;
    background-color: #F6F0E9;
  }
  .skills-content {
    max-width: 1200px;
    margin: 0 auto;
  }
  .skills-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }
  .skills-label {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--accent-color);
    font-weight: 500;
  }

  /* Mobile: Stack categories */
  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .skill-category h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 1.5rem;
  }
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .skill-item img {
    width: 48px;
    height: 48px;
    margin-bottom: 0.5rem;
    transition: transform 0.2s ease-in-out;
  }
  .skill-item:hover img { transform: scale(1.1); }
  .skill-item:active img { transform: scale(0.6); }
  .skill-item.tapped img { animation: tap-animation 0.3s ease-out; }

  /* Desktop: Horizontal layout */
  @media (min-width: 1024px) {
    .skills-grid {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 1rem;
    }
    .skill-category {
      flex: 1 1 200px; /* Allow categories to grow and shrink */
    }
    .skills-list {
        grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
    }
  }

  @keyframes tap-animation {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const skillItems = document.querySelectorAll('.skill-item');
    skillItems.forEach(item => {
      item.addEventListener('touchend', (event) => {
        event.preventDefault();
        item.classList.add('tapped');
        setTimeout(() => { item.classList.remove('tapped'); }, 300);
      });
      item.addEventListener('click', (event) => {
        if (event.pointerType === 'mouse') {
          item.classList.add('tapped');
          setTimeout(() => { item.classList.remove('tapped'); }, 300);
        }
      });
    });
  });
</script>