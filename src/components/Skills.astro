---
import astro from '../../assets/icons/astro.svg?raw';
import bash from '../../assets/icons/bash.svg?raw';
import css from '../../assets/icons/css.svg?raw';
import javascript from '../../assets/icons/javascript.svg?raw';
import linux from '../../assets/icons/linux.svg?raw';
import powershell from '../../assets/icons/powershell.svg?raw';
import windows from '../../assets/icons/windows.svg?raw';

const icons = [
  { name: 'Astro', svg: astro },
  { name: 'Bash', svg: bash },
  { name: 'CSS', svg: css },
  { name: 'JavaScript', svg: javascript },
  { name: 'Linux', svg: linux },
  { name: 'PowerShell', svg: powershell },
  { name: 'Windows', svg: windows },
];
---

<div id="skills" class="skills-section">
  <div class="container">
    <h2 class="h2">// Skills</h2>
    <div class="skills-grid">
      {icons.map(icon => (
        <div class="skill-card">
          <div class="skill-icon" set:html={icon.svg} />
          <div class="skill-name">{icon.name}</div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .skills-section {
    padding: 6rem 0;
  }

  .h2 {
    font-family: var(--font-family-mono);
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    color: var(--color-accent);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 2rem;
  }

  .skill-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: 0.5rem;
    background-color: var(--color-gray-800);
    border: 1px solid var(--color-gray-700);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .skill-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .skill-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .skill-icon > :global(svg) {
    width: 100%;
    height: 100%;
  }

  .skill-name {
    font-family: var(--font-family-sans);
    font-size: 1rem;
    color: var(--color-gray-300);
  }
</style>
