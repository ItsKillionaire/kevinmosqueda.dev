---
import Socials from './Socials.astro';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <Socials />
      <p>&copy; {new Date().getFullYear()} Kevin Mosqueda. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 2rem 0;
    background-color: var(--color-gray-900);
    color: var(--color-gray-400);
    text-align: center;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
</style>
