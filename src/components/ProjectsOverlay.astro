---
import ProjectCard from './ProjectCard.astro';

// Fetch all pinned projects
const response = await fetch('https://pinned.berrysauce.dev/get/ItsKillionaire');
const allProjects = (await response.json()).map(p => ({...p, repo: p.name.trim(), link: `https://github.com/${p.author}/${p.name}`, image: `https://opengraph.githubassets.com/1/${p.author}/${p.name}`, language: p.language, languageColor: p.languageColor}));

const sortedProjects = allProjects;
---
<aside id="projects-overlay">
  <div class="overlay-content">
    <button id="close-projects-btn" title="Close">&times;</button>
    <div class="header-container">
      <h2>MY_PROJECTS/</h2>
    </div>
    <div class="projects-grid">
      {sortedProjects.map(project => (
        <ProjectCard
          name={project.repo}
          description={String(project.description || '').trim()}
          url={project.link}
          language={String(project.language || 'N/A').trim()}
          languageColor={project.languageColor || '#000000'}
          image={project.image}
        />
      ))}
    </div>
  </div>
</aside>
<style>
  #projects-overlay {
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    width: clamp(320px, 40vw, 500px);
    
    /* Glassmorphism Effect */
    background-color: rgba(241, 238, 235, 0.5); /* Use --bg-color with alpha */
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);

    transform: translateX(100%);
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 100;
    
    border-left: 1px solid rgba(29, 29, 27, 0.1); /* Subtle border */
    box-shadow: -10px 0 30px rgba(0,0,0,0.1);
  }

  #projects-overlay.is-open {
    transform: translateX(0);
  }

  .overlay-content {
    height: 100%;
    overflow-y: auto;
    padding: 2.5rem;
  }

  /* Custom scrollbar for the overlay */
  .overlay-content::-webkit-scrollbar {
    width: 8px;
  }
  .overlay-content::-webkit-scrollbar-track {
    background: transparent;
  }
  .overlay-content::-webkit-scrollbar-thumb {
    background-color: rgba(29, 29, 27, 0.2);
    border-radius: 10px;
    border: 3px solid transparent;
    background-clip: content-box;
  }
   .overlay-content::-webkit-scrollbar-thumb:hover {
    background-color: rgba(29, 29, 27, 0.4);
  }

  #close-projects-btn {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
    color: var(--text-color);
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  #close-projects-btn:hover {
    opacity: 1;
  }

  .header-container {
    margin-bottom: 2.5rem;
  }

  h2 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 3vw, 2.5rem);
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    color: var(--text-color);
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding-bottom: 2rem; /* Add padding to prevent content from being cut off */
  }
</style>
