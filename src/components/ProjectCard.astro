---
export interface Props {
  name: string;
  description: string;
  url: string;
  language: string;
  languageColor: string;
  image: string;
  index: number;
}
const { name, description, url, language, languageColor, image, index } = Astro.props;
---
<a href={url} target="_blank" rel="noopener noreferrer" class="card" style={`--index: ${index};`}>
  <img src={image} alt={`Social preview for ${name}`} class="card-img"/>
  <div class="card-content">
    <h3 class="card-title">{name}</h3>
    <p class="card-description">{description || 'No description available.'}</p>
    <div class="language-separator" style={`background-color: ${languageColor};`}></div>
    <span class="card-language">{language}</span>
  </div>
</a>

<style>
  .card {
    display: block;
    border: 1px solid var(--text-color);
    text-decoration: none;
    color: var(--text-color);
    background-color: var(--bg-color);
    opacity: 0;
    transform: translateY(-100%);
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  

  .card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
  }
  .card-img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 3 / 2;
    object-fit: cover;
    background-color: #e0e0e0;
  }
  .card-content {
    padding: 1.5rem;
  }
  .card-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
  }
  .card-description {
    font-family: var(--font-sans-serif);
    font-size: 1rem;
    line-height: 1.5;
    margin: 0 0 1rem 0;
    min-height: 4.5em;
  }

  .language-separator {
    height: 4px; /* Thin line */
    width: 100%;
    margin: 1rem 0; /* Space above and below */
  }

  .card-language {
    font-family: var(--font-sans-serif);
    font-size: 0.9rem;
    font-weight: bold;
    text-transform: uppercase;
  }
</style>